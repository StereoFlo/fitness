{% extends 'layouts/main.html.twig' %}

{% block title %}Trainings list{% endblock %}

{% block body %}
    {% if list.total > 0 %}
        <p>Всего тренировок {{ list.total }}</p>
        <table class="table">
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Trainer</td>
                <td>Description</td>
                <td>State</td>
                <td>Actions</td>
            </tr>
            {% for item in list.items %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.name }}</td>
                    <td>{{ item.trainerName }}</td>
                    <td>{{ item.description }}</td>
                    <td>{{ item.hasUser(app.user.id) }}</td>
                    <td>
                        <a href="{{ path('user.training.show', {'id': item.id}) }}">Show</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <p>Тренировок нет</p>
    {% endif %}
{% endblock %}
