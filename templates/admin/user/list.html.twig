{% extends 'layouts/main.html.twig' %}

{% block title %}User list{% endblock %}

{% block body %}
    {% if user.total > 0 %}
        <p>Всего пользователей {{ user.total }}</p>
        <table class="table">
            {% for item in user.items %}
                <tr>
                    <td>{{ item.email }}</td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <p>Пользователей нет</p>
    {% endif %}
{% endblock %}
