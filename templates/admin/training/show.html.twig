{% extends 'layouts/main.html.twig' %}

{% block title %}TRain view{% endblock %}

{% block body %}
    <h1>Train view</h1>
    <p>ID: {{ training.id }}</p>
    <p>Name: {{ training.name }}</p>
    <p>Trainer Name: {{ training.trainerName }}</p>
    <p>Description: {{ training.description }}</p>
    <p>User count: {{ training.trainings.count }}</p>
    {% if training.trainings.count %}
        {% for user_trn in training.trainings %}
            <ul>
                <li><a href="{{ path('admin.user.form', {'id': user_trn.user.id}) }}">{{ user_trn.user.name }}</a></li>
            </ul>
        {% endfor %}
    {% endif %}
    <div class="row">
        <div class="col">
            <p>Send email to customers</p>
            <div class="form-errors">
                {{ form_errors(emailForm) }}
            </div>
            {{ form_start(emailForm) }}
            <div class="form-group">
                {{ form_label(emailForm.message) }}
                {{ form_widget(emailForm.message, {'attr' : {'class': 'form-control'}}) }}
            </div>
            {{ form_widget(emailForm.submit, {'attr' : {'class': 'btn btn-primary'}}) }}
            {{ form_end(emailForm) }}
        </div>
        <div class="col">
            <p>Send sms to customers</p>
            <div class="form-errors">
                {{ form_errors(smsForm) }}
            </div>
            {{ form_start(smsForm) }}
            <div class="form-group">
                {{ form_label(smsForm.message) }}
                {{ form_widget(smsForm.message, {'attr' : {'class': 'form-control'}}) }}
            </div>
            {{ form_widget(smsForm.submit, {'attr' : {'class': 'btn btn-primary'}}) }}
            {{ form_end(smsForm) }}
        </div>
    </div>
{% endblock %}
